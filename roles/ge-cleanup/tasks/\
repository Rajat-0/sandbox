---
# tasks file for ge-cleanup

- name: add_host to run time inventory for tobecleaned group
  add_host: name={{ clean.master_ip }}
            groups=tobecleaned
            ansible_ssh_user=centos
            ansible_become=True
            ansible_become_user=root
            ansible_private_key_file={{ clean.key_path}}
  when:
    - clean.base_distro == 'centos'

- name: add_host to run time inventory for tobecleaned group
  add_host: name={{ clean.master_ip }}
            ansible_python_interpreter=/usr/bin/python3
            groups=tobecleaned
            ansible_ssh_user=ubuntu
            ansible_become=True
            ansible_become_user=root
            ansible_private_key_file={{ clean.key_path}}
  when:
    - clean.base_distro == 'ubuntu'

- include: clean.yaml
